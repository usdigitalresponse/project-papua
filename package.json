{
  "name": "project-papua-ts",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "aws-amplify": "^3.0.7",
    "aws-amplify-react": "^4.1.6",
    "express": "^4.17.1",
    "grommet": "^2.12.0",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "polished": "^3.5.1",
    "react": "^16.13.1",
    "react-date-picker": "^8.0.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1",
    "styled-components": "^5.1.0",
    "uuid": "^7.0.3",
    "validator": "^13.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "amplify:transformer": "FUNCTION_NAME=transformer scripts/compile-function.sh",
    "amplify:resolverFunctions": "FUNCTION_NAME=resolverFunctions scripts/compile-function.sh",
    "compile": "run-p amplify:*",
    "lint:check": "eslint '**/*.{js,jsx,ts,tsx}' && prettier --check .",
    "lint": "eslint --fix '**/*.{js,jsx,ts,tsx}' && prettier --write .",
    "backend": "cd backend/functions/resolverFunctions && yarn --frozen-lockfile && yarn nodemon",
    "transform": "cd backend/functions/transformer && yarn --frozen-lockfile && yarn local"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-merge": "yarnhook",
      "post-checkout": "yarnhook",
      "post-rewrite": "yarnhook"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 120
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.{yml,yaml}": [
      "prettier --write"
    ],
    "*.css": [
      "prettier --write"
    ],
    "*.svg": [
      "svgo"
    ],
    "*.{png,jpeg,jpg,gif}": [
      "imagemin-lint-staged"
    ]
  },
  "devDependencies": {
    "@google-cloud/translate": "^5.3.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/lodash": "^4.14.149",
    "@types/hapi__joi": "^16.0.12",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/uuid": "^7.0.2",
    "@types/validator": "^13.0.0",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "husky": "^4.2.5",
    "imagemin-lint-staged": "^0.4.0",
    "lint-staged": "^10.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "typescript": "^3.8.3",
    "yarnhook": "^0.4.3"
  }
}
