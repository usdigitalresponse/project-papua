{
  "name": "project-papua-ts",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "ajv": "^6.12.3",
    "aws-amplify": "^3.3.17",
    "aws-amplify-react": "^4.2.21",
    "base64-arraybuffer": "^0.2.0",
    "copy-to-clipboard": "^3.3.1",
    "email-validator": "^2.0.4",
    "express": "^4.17.1",
    "gh-pages": "^2.2.0",
    "grommet": "^2.16.3",
    "grommet-icons": "^4.5.0",
    "js-yaml": "3.14.1",
    "ky": "^0.26.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "polished": "^3.6.7",
    "react": "^16.14.0",
    "react-date-picker": "^8.0.7",
    "react-dom": "^16.14.0",
    "react-dropzone": "^11.3.0",
    "react-number-format": "^4.4.3",
    "react-scripts": "4.0.2",
    "styled-components": "^5.2.1",
    "uuid": "^7.0.3",
    "validator": "^13.5.1",
    "snyk": "^1.445.0"
  },
  "scripts": {
    "start": "SKIP_PREFLIGHT_CHECK=true react-scripts start",
    "build": "SKIP_PREFLIGHT_CHECK=true react-scripts build",
    "predeploy": "PUBLIC_URL=https://usdigitalresponse.github.io/project-papua/ yarn run build",
    "deploy": "gh-pages -d build",
    "test": "jest --testPathIgnorePatterns 'backend/.*'",
    "eject": "react-scripts eject",
    "amplify:transformer": "FUNCTION_NAME=transformer scripts/compile-function.sh",
    "amplify:resolverFunctions": "FUNCTION_NAME=resolverFunctions scripts/compile-function.sh",
    "compile": "run-p amplify:*",
    "lint:check": "eslint '**/*.{js,jsx,ts,tsx}' --max-warnings=0 && prettier --check .",
    "lint": "eslint --fix '**/*.{js,jsx,ts,tsx}' --max-warnings=0 && prettier --write .",
    "backend": "cd backend/functions/resolverFunctions && yarn --frozen-lockfile && DANGEROUS_DEMO_SKIP_VALIDATION=true FILE='form.sample.yml' yarn nodemon",
    "transform": "cd backend/functions/transformer && yarn --frozen-lockfile && yarn local",
    "snyk-protect": "snyk protect",
    "prepare": "yarn run snyk-protect"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-merge": "yarnhook",
      "post-checkout": "yarnhook",
      "post-rewrite": "yarnhook"
    }
  },
  "jest": {
    "modulePaths": [
      "<rootDir>/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "\\.test\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 120
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.{yml,yaml}": [
      "prettier --write"
    ],
    "*.css": [
      "prettier --write"
    ],
    "*.svg": [
      "svgo"
    ],
    "*.{png,jpeg,jpg,gif}": [
      "imagemin-lint-staged"
    ]
  },
  "devDependencies": {
    "@google-cloud/translate": "^5.3.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/ajv": "^1.0.0",
    "@types/base64-arraybuffer": "^0.1.0",
    "@types/email-validator": "^1.0.6",
    "@types/hapi__joi": "^16.0.12",
    "@types/jest": "^25.2.1",
    "@types/js-yaml": "^3.12.3",
    "@types/lodash": "^4.14.149",
    "@types/moment": "^2.13.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/uuid": "^7.0.2",
    "@types/validator": "^13.0.0",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "ajv-cli": "^3.1.0",
    "colors": "^1.4.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "husky": "^4.2.5",
    "imagemin-lint-staged": "^0.4.0",
    "jest": "^25.4.0",
    "lint-staged": "^10.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3",
    "yarnhook": "^0.4.3"
  },
  "snyk": true
}
